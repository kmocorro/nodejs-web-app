                            closed="true" buttons="#dluph-buttons">
                        <form id="fmuph" method="post" novalidate style="margin:0;padding:20px 50px">
                            <div style="margin-bottom:20px;font-size:14px;border-bottom:1px solid #ccc">Process UPH</div>   
                             <div style="margin-bottom:10px">
                                    <select class="easyui-combobox" name="process" label="Process:" required="true" labelPosition="top" style="width:100%;height:52px;">
                                        
                                    </select>
