        </div>
        <div data-options="region:'center'" title="Admin Panel">
                    <table id="dg" title="Tool Time Adjustment" class="easyui-datagrid" style="max-width:100%;height:100%;"
                            url="/viewtarget/"
                            method="get"
                            toolbar="#toolbar"
                            rownumbers="true" fitColumns="true" singleSelect="true">
                    <thead>
                        <tr>
                            <th field="process" width="30">Process Name</th>
                            <th field="start_time" width="35">Start Time</th>
                            <th field="end_time" width="35">End Time</th>
                            <th field="num_tool" width="20">Num of Tools</th>
                            <th field="uph" width="10">UPH</th>
                            <th field="oee" width="10">OEE</th>
                            <th field="toolpm" width="10">DT/SDT</th>
                            <th field="target" width="10">Target</th>
                            <th field="remarks" width="30">Remarks</th>
                        </tr>
                    </thead>
                    </table>
                    <div id="toolbar">
                        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newToolTime()">New Tool Time</a>
                        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editUPH()">Edit UPH</a>
                        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editUser()">Edit OEE</a>
                        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyUser()">Remove Tool Time</a>
                    </div>
                    
