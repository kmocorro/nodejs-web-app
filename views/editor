                    <!---->
                    <div id="dluph-buttons">
                        <a href="javascript:void(0)" class="easyui-linkbutton c6" iconCls="icon-ok" onclick="saveUPH()" style="width:90px">Save</a>
                        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dluph').dialog('close')" style="width:90px">Cancel</a>
                    </div>


                    <script type="text/javascript">
                        var url;

                        $('#dg').datagrid({
                            url: '/viewtarget/',
                            toolbar: "#toolbar",
                            method: "get",
                            rownumbers:"true",
                            fitColumns:"true",
                            singleSelect:"true"
                        });

                        function newToolTime(){
                            $('#dlg').dialog('open').dialog('center').dialog('setTitle','New Tool Time');
                            $('#fm').form('clear');
                            url = url;

                        }   
                        function editUPH(){
                            var row = $('#dg').datagrid('getSelected');
                            if (row){
                                $('#dluph').dialog('open').dialog('center').dialog('setTitle','Edit UPH');
                                $('#fmuph').form('load',row);
                                url = '/update/';
                            }
                        }
                        function saveTooltime(){
                            $('#fm').form('submit',{
                                url: url,
                                onSubmit: function(){
                                    return $(this).form('validate');
                                },
                                success: function(result){
                                    var result = eval('('+result+')');
                                    if (result.errorMsg){
                                        $.messager.show({
                                            title: 'Error',
                                            msg: result.errorMsg
                                        });
                                    } else {
                                        $('#dlg').dialog('close');        // close the dialog
                                        $('#dg').datagrid('reload');    // reload the user data
                                    }
                                }
                            });
                        }
                        function saveUPH(){
                            $('#fmuph').form('submit',{
                                url: url,
                                onSubmit: function(){
                                    return $(this).form('validate');
                                },
                                success: function(result){
                                    var result = eval('('+result+')');
                                    if (result.errorMsg){
                                        $.messager.show({
                                            title: 'Error',
                                            msg: result.errorMsg
                                        });
                                    } else {
                                        $('#dluph').dialog('close');        // close the dialog
                                        $('#dg').datagrid('reload');    // reload the user data
                                    }
                                }
                            });
                        }
                        function destroyUser(){
                            var row = $('#dg').datagrid('getSelected');
                            if (row){
                                $.messager.confirm('Confirm','Are you sure you want to delete this tool time?',function(r){
                                    if (r){
                                        $.post('destroy_user.php',{id:row.id},function(result){
                                            if (result.success){
                                                $('#dg').datagrid('reload');    // reload the user data
                                            } else {
                                                $.messager.show({    // show error message
                                                    title: 'Error',
                                                    msg: result.errorMsg
                                                });
                                            }
                                        },'json');
                                    }
                                });
                            }
                        }
                    </script>

        </div>
    </div>
